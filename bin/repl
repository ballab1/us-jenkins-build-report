#! /usr/bin/env bash

if [[ ! (-f .repl-port) ]]; then
   if [[ ! $1 ]]; then
      echo ".repl-port file not found!"
      echo
      echo "Usage: repl [port]"
      exit -1
   else
      port=$1
   fi
else
   port=$(< .repl-port)
fi

echo
echo ":repl/quit or :cljs/quit to EXIT!"
echo

#rlwrap telnet 127.0.0.1 $(< .repl-port)
rlwrap telnet 127.0.0.1 $port
