#!/usr/bin/env bash

source $(dirname $0)/validate-kafka-env

if [ "${kafka_home:-}" ]; then
   cd "$kafka_home"
   if [ $# -eq 1 ]; then
      consumer_group=$1
      ./bin/kafka-consumer-groups.sh --bootstrap-server "$BOOTSTRAP_SERVERS" --describe --group "$consumer_group"
   else 
      echo "Missing consumer-group name!"
   fi
fi

# vim: ft=sh
